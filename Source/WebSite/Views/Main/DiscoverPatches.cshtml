        <div class="col-md-12">
            @Html.Raw(dataContext.AddDateField<LatestVendorDiscoveryResult>("ReviewDate"))
            @Html.Raw(Model.AddValueListSelectField<LatestVendorDiscoveryResult>("ResultKey", "discoveryResult", initialFocus: true))
