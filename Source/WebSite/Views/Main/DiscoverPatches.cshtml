            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Name", initialFocus: true))
            @Html.Raw(Model.AddValueListSelectField<LatestVendorDiscoveryResult>("VendorTypeKey", "vendorType"))
            @Html.Raw(dataContext.AddInputField<Vendor>("PatchCadence"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Abbreviation"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Company"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Link", "url"))
            @Html.Raw(dataContext.AddTextAreaField<LatestVendorDiscoveryResult>("Description", 5))
            @Html.Raw(dataContext.AddCheckBoxField<LatestVendorDiscoveryResult>("Enabled"))
        </div>
        <div class="col-md-4">
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Address1"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("Address2"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("City"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("State"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ZIP"))
            @Html.Raw(Model.AddValueListSelectField<LatestVendorDiscoveryResult>("NoticeMethodKey", "noticeMethod"))
            @Html.Raw(dataContext.AddTextAreaField<LatestVendorDiscoveryResult>("VendorNotes", 4))
        </div>
        <div class="col-md-4">
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ContactName1"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ContactEmail1"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ContactPhoneOfc1"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ContactPhoneCell1"))
            @Html.Raw(dataContext.AddInputField<LatestVendorDiscoveryResult>("ContactName2"))
