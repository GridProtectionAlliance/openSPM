@using System.Text
@using openSPM.Models
@model AppModel
@{
    ViewBag.PageControlScripts = new StringBuilder();

    // Define column headers, use null for field name to make column non-sortable
    ViewBag.HeaderColumns = new[]
    {   //    { "Field", "Label", "Classes" }
        new[] { "Name", "Name", "text-center" },
        new[] { "Company", "Company", "text-left" },
        new[] { "Link", "Link", "text-left" }
    };

    ViewBag.BodyRows = BodyRows().ToString();
    ViewBag.AddNewEditDialog = AddNewEditDialog().ToString();
}
@helper BodyRows()
{
    <td width="15%" class="text-center valign-middle" nowrap><button type="button" class="btn btn-link" data-bind="text: Name, click: $parent.viewPageRecord"></button></td>
    <td width="40%" class="text-left table-cell-hard-wrap"><div data-bind="text: $($element.parentElement).truncateToWidth(Company, 1.5), attr: {title: Company}"></div></td>
    <td width="40%" class="text-left table-cell-hard-wrap"><a data-bind="attr:{href: notNull(Link)}" target="_blank"><div data-bind="text: $($element.parentElement.parentElement).truncateToWidth(Link, 2)"></div></a></td>
    <td width="5%" class="text-center valign-middle" nowrap>
        <button type="button" class="btn btn-xs" data-bind="click: $parent.editPageRecord, enable: $parent.canEdit() && $parent.dataHubIsConnected()"><span class="glyphicon glyphicon-pencil"></span></button>
        <button type="button" class="btn btn-xs" data-bind="click: $parent.removePageRecord, enable: $parent.canDelete() && $parent.dataHubIsConnected()"><span class="glyphicon glyphicon-remove"></span></button>
    </td>
}
@helper AddNewEditDialog()
{
    DataContext dataContext = Model.DataContext;

    <div class="col-md-4">
        @Html.Raw(dataContext.AddInputField<Platform>("Name", initialFocus: true))
        @Html.Raw(Model.AddValueListSelectField<Platform>("PlatformTypeKey", "PlatformType"))
        @Html.Raw(dataContext.AddInputField<Platform>("Abbreviation"))
        @Html.Raw(dataContext.AddInputField<Platform>("Company"))
        @Html.Raw(dataContext.AddInputField<Platform>("Link", "url"))
        @Html.Raw(dataContext.AddTextAreaField<Platform>("Description", 5))
        @Html.Raw(dataContext.AddCheckBoxField<Platform>("Enabled"))
    </div>
    <div class="col-md-4">
        @Html.Raw(dataContext.AddInputField<Platform>("Address1"))
        @Html.Raw(dataContext.AddInputField<Platform>("Address2"))
        @Html.Raw(dataContext.AddInputField<Platform>("City"))
        @Html.Raw(dataContext.AddInputField<Platform>("State"))
        @Html.Raw(dataContext.AddInputField<Platform>("ZIP"))
        @Html.Raw(Model.AddValueListSelectField<Platform>("NoticeMethodKey", "noticeMethod"))
        @Html.Raw(dataContext.AddTextAreaField<Platform>("Notes", 4))
    </div>
    <div class="col-md-4">
        @Html.Raw(dataContext.AddInputField<Platform>("ContactName1"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactEmail1"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactPhoneOfc1"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactPhoneCell1"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactName2"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactEmail2"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactPhoneOfc2"))
        @Html.Raw(dataContext.AddInputField<Platform>("ContactPhoneCell2"))
    </div>
}
@Html.Partial("PagedViewModel")
@section Scripts {
    @Html.Raw(ViewBag.PageControlScripts.ToString())
    <script>
        @Html.Raw(Model.DataContext.RenderViewModelConfiguration<Platform>(ViewBag))
    </script>
}